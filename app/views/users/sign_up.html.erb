<%= form_for @user do |f| %>
  <div class="row centered-form"  >
    <div class="col-xs-12 col-sm-8 col-md-4 col-sm-offset-2 col-md-offset-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <form class="form-signin" >
            <h2 class="form-signin-heading">注册账号</h2>
            <div class="form-group">
              <%= f.label :用户名, class: "col-md-16 control-label" %>
              <div class="col-md-16">
                <%= f.text_field :name, placeholder: "User name", class: "form-control" %>
              </div>
              <% if @user.errors[:name].any? %>
                <p class="alert alert-danger" >
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <%= @user.errors[:name][0] %>
                </p>
              <% end %>
            </div>

            <div class="form-group">
              <%= f.label :邮箱, class: "col-md-16 control-label" %>
              <div class="col-md-16">
                <%= f.text_field :email, placeholder: "Email address", class: "form-control" %>
              </div>
              <% if @user.errors[:email].any? %>
                <p class='alert alert-danger' >
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <%= @user.errors[:email][0] %></p>
              <% end %>
            </div>


            <div class="form-group">
              <%= f.label :设置密码, class: "col-md-16 control-label" %>
              <div class="col-md-16">
                <%= f.password_field :password, placeholder: "Set password", class: "form-control" %>
              </div>
              <% if @user.errors[:password].any? %>
                <p class='alert alert-danger' >
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <%= @user.errors[:password][0] %>
                </p>
              <% end %>
            </div>

            <div class="form-group">
              <%= f.label :确认密码, class: "col-md-16 control-label" %>
              <div class="col-md-16">
                <%= f.password_field :password_confirmation, placeholder: "Confirm password", class: "form-control" %>
              </div>
              <% if @user.errors[:password_confirmation].any? %>
                <p class="alert alert-danger"  >
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <%= @user.errors[:password_confirmation][0] %></p>
              <% end %>
            </div>
            <p><%= f.submit "确定", :class => "btn btn-lg btn-primary btn-block" %></p>
          </form>

        </div>
      </div>
    </div>
  <%end%>
</div>

