<%= form_tag "/create_login_session" do  %>
  <div class="row centered-form" style="margin-top:80px" >
    <div class="col-xs-12 col-sm-8 col-md-4 col-sm-offset-2 col-md-offset-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <form class="form-signin" >
            <h2 class="form-signin-heading">登录账号</h2>

            <div class="form-group">
              <%= label_tag "用户名" %>
              <div class="col-md-16">
                <%= text_field_tag :name, params[:name],placeholder: "User name", class: "form-control" %>
              </div>
            </div>

            <div class="form-group">
              <%= label_tag "密码"%>
              <div class="col-md-16">
                <%= password_field_tag :password,params[:password], placeholder: "Password", class: "form-control" %>
              </div>
            </div>

            <p>
              <%= check_box_tag :remember_me, 1, params[:remember_me] %>
              <%= label_tag :记住密码 %>
            </p>

            <p><%= submit_tag "确定", :class => "btn btn-lg btn-primary btn-block" %></p>
          </form>


        </div>
      </div>
    </div>
  <% end %>
</div>
